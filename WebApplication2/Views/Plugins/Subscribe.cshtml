@model WebApplication2.Models.Plugin

@{
    ViewData["Title"] = "Subscribe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Subscribe">
    <div class="form-horizontal">
        <h4>Enter License Key</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Key" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Key" class="form-control" rows="3" ></textarea>
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Key" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="NormalUserIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

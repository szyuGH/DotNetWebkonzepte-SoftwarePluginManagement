@model IEnumerable<SPM.Models.LicenseKey>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Software)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>
            <th>
                <a asp-action="AddUserKey" class="btn btn-success fa fa-plus">&ensp;Add License Key</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr onclick="location.href = '@(Url.Action("Details", "LicenseKeys", new { id = @item.Id}))'">
                <td>
                    <a asp-controller="Softwares" asp-action="Details" asp-route-id="@item.Software.Id">@item.Software.Name</a>
                </td>
                <td>
                    @(item.GetShortKey(36))
                </td>
                <td>
                    <a asp-action="Unsubscribe" asp-route-id="@item.Id" class="btn btn-primary fa fa-times">&ensp;Unsubscribe</a>
                </td>
            </tr>
}
    </tbody>
</table>